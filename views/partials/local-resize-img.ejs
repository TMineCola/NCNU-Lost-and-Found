<script src="vendor/local-resize-img/patch/mobileBUGFix.mini.js"></script>
<script>
    $('#image').localResizeIMG({
        width: 800,
        quality: 0.8,
        success: function (result) {
            // console.log(result.base64);
            // 把圖片編碼存起來
            app.formData.image.imgData = result.base64.replace(/.*,/, '');
            // 確定是圖片後先把 value 改掉, 讓送出驗證時不為空
            app.formData.image.value = "ok";
        }
    });
