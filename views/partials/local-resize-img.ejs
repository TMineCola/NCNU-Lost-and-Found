<script>
    $('#image').change(function (){
        lrz(this.files[0], {width: 800})
        .then(function (result) {
            // console.log(result);
            // 把圖片編碼存起來
            app.formData.image.imgData = result.base64.replace(/.*,/, '');
            // 確定是圖片後先把 value 改掉, 讓送出驗證時不為空
            app.formData.image.value = "ok";
        })
        .catch(function (err) {
            console.log(err);
        });
    });
