<script type="text/javascript">
  $(document).ready(function () {
    console.log("test");
    $('#try').on("click", '#btn-toggleSetting', function () {
      $("body").find("#test").removeClass("tool_visible");
      $("body").find("#blur").removeClass("blur");
      $("body").find("#test").addClass("tool_invisible");
      $("body").find("#btn-toggleSetting").remove();
      $("body").find("#try").append(
        '<div id="btn-toggleSetting_open"><i class="fa fa-arrow-down" aria-hidden="true"></i></div>');
    });
    $('#try').on("click", '#btn-toggleSetting_open', function () {
      $("body").find("#test").removeClass("tool_invisible");
      $("body").find("#blur").addClass("blur");
      $("body").find("#test").addClass("tool_visible");
      $("body").find("#btn-toggleSetting_open").remove();
      $("body").find("#try").append(
        '<div id="btn-toggleSetting"><i class="fa fa-arrow-up text-white" aria-hidden="true"></i></div>');
    });
    $('.quicklink_link').click(function(){
      console.log("JQUERY ");
      $("body").find("#test").removeClass("tool_visible");
      $("body").find("#blur").removeClass("blur");
      $("body").find("#test").addClass("tool_invisible");
      $("body").find("#btn-toggleSetting").remove();
      $("body").find("#try").append(
        '<div id="btn-toggleSetting_open"><i class="fa fa-arrow-down text-white" aria-hidden="true"></i></div>');
    });
    // 當關鍵字輸入後存到vue中做過濾
    $("#keyWordGo").click(function () {
      app.keyWord = $("#keyWord").val();
    });
    $("#keyWord").keyup(function (e) {
      // enter
      if(e.keyCode == 13){
        app.keyWord = $("#keyWord").val();
      }
    });

    // Sorry about bad spacing. Also...this is jquery if you didn't notice allready.
    $(".quicklink_hover").hover(function(){
    //On Hover - Works on ios
        $(this).css("opacity", "1");
    }, function(){
        //Hover Off - Hover off doesn't seem to work on iOS
        $(this).css("opacity", "0");
    })
    // 滑動視窗後自動關閉categories，需要時再打開
    var run = 0;
    $(window).scroll(function () {
        if ($(window).scrollTop() > 100) { //向下滾動數值大於該值時，即出現小火箭
          $("body").find("#test").removeClass("tool_visible");
          $("body").find("#blur").removeClass("blur");
          $("body").find("#test").addClass("tool_invisible");
          $("body").find("#btn-toggleSetting").remove();
          while(run!=1){
          $("body").find("#try").append(
          '<div id="btn-toggleSetting_open"><i class="fa fa-arrow-down" aria-hidden="true"></i></div>');
          run++
          }
        }
      });
  });
</script>