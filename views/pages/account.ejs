<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="csrf-token" content="<%=csrfToken%>">
    <meta name="description" content="國立暨南國際大學遺失物系統">
    <link href="css/loading.css" rel="stylesheet">
    <title>帳號管理</title>
    <% include ../partials/bootstrap_css %>
</head>

<body>
    <% include ../partials/loading %>
    <!-- 下面的inclue若出錯可放回container下方，
      放上來，是因為，loading順序 -->
    <% include ../partials/bootstrap_js %>
    <script>
        var loading = {
            start: function () {
                $('#loading-wrapper').show();
            },
            complete: function () {
                $('#loading-wrapper').hide();
            }
        };
        //   loading.start();
    </script>
    <% include ../partials/navBar %>
    <% include ../partials/vue_js %>
    <div class="container" style="margin-top: 90px">
        <div class="row">
            <div class="col-12 mb-3">
                <h1>帳號管理</h1>
            </div>
        </div>
        <div id="account">
            <a href="#" class="btn btn-secondary" data-toggle="modal" data-target="#addForm">新增帳號</a>
            <div class="modal fade" id="addForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">新增帳號</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form class="mb-3">
                                <div class="form-group">
                                    <label for="account">Email</label>
                                    <input type="email" class="form-control" id="account"
                                        v-model.trim="formData.userEmail">
                                </div>
                                <div class="form-group">
                                    <label for="pass">密碼</label>
                                    <input type="password" class="form-control" id="pass"
                                        v-model.trim="formData.userPass">
                                </div>
                                <div v-if="feedBack.submited" class="alert alert-success" role="alert">
                                    <strong>註冊成功!</strong>
                                </div>
                                <div v-if="feedBack.isError" class="alert alert-warning" role="alert">
                                    <strong>{{ feedBack.errMsg }}</strong>
                                </div>
                                <button @click.prevent="createAccount()" type="submit"
                                    class="btn btn-primary">送出</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        axios.defaults.headers.common['CSRF-Token'] = document.querySelector('meta[name="csrf-token"]').getAttribute(
            'content') || "";
        var app = new Vue({
            el: '#account',
            data: {
                lists: "",
                formData: {
                    userEmail: "",
                    userPass: ""
                },
                // 回報表單回饋訊息
                feedBack: {
                    submited: 0,
                    isError: 0,
                    errMsg: ""
                }
            },
            // 載入前就先發ajax
            beforeCreate: function () {
                var self = this;
                axios.get('/api/lost/')
                    .then(function (response) {
                        console.log(response.data);
                        self.lists = response.data;
                    })
                    .catch(function (error) {
                        console.log(error);
                        // 待加入跳轉到404頁面
                    });
            },
            beforeUpdate: function () {
                window.loading.start();
            },
            updated: function () {
                window.loading.complete();
            },
            methods: {
                validateEmail(email) {
                    var re =
                        /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                    return re.test(String(email).toLowerCase());
                },
                createAccount() {
                    var self = this;
                    this.feedBack.submited = 0;
                    this.feedBack.isError = 0;
                    var notEmpty = this.formData.userEmail != "" && this.formData.userPass != "";
                    if (notEmpty) {
                        if (!this.validateEmail(this.formData.userEmail)) {
                            this.feedBack.isError = 1;
                            this.feedBack.errMsg = "Email 格式錯誤!";
                            return;
                        }
                        axios.post('/api/account', {
                                "email": self.formData.userEmail,
                                "password": self.formData.userPass,
                            })
                            .then(function (response) {
                                console.log(response);
                                self.feedBack.submited = 1;
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            })
                            .catch(function (error) {
                                console.log(error.response.data.error);
                                self.feedBack.isError = 1;
                                if (error.response.data.error) {
                                    self.feedBack.errMsg = error.response.data.error;
                                } else {
                                    self.feedBack.errMsg = "發生錯誤，請再試一次!";
                                }
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            });
                    } else {
                        this.feedBack.isError = 1;
                        this.feedBack.errMsg = "所有欄位皆須填寫!";
                    }
                }
            },
            computed: {}
        })
    </script>
</body>

</html>